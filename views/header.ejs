<body>
  <!-- Page Layout HTML here -->

    <% include feedback %>

    <div class="navigation-header">
      <div class="container">
        
        <div class="brand-logo pull-left"><a href="/"><img class="animated pulse" src="/images/logo.png"></a></div>
        <%if(typeof userData != 'undefined') { %>

          <ul class="unstyled">
            <li class="dropdown pull-right nav-link">
              <div role="button" class="dropdown-toggle nav-profile ellipsis" data-hover="dropdown" data-toggle="dropdown">
                <%if(typeof userData.userDp != 'undefined' && userData.userDp != ''){ %>
                  <img src="<%=userData.userDp%>"/>
                <% } %>
                <%if(typeof userData.userDp == 'undefined' || userData.userDp == ''){ %>
                  <img src="/images/default_user.png"/>
                <% } %>
                <%= userData.userDisplayName %>
              </div>
              <ul class="dropdown-menu" role="menu">
                <li role="presentation">
                  <a role="menuitem" tabindex="-1" href="/user/showuserprofile/<%=userData.userId%>">
                    <i class="icon-user"></i>&nbsp;Profile
                  </a>
                </li>
                <li role="presentation">
                  <a role="menuitem" tabindex="-1" href="/logout">
                    <i class="icon-signout"></i>&nbsp;Sign Out
                  </a>
                </li>
              </ul>
            </li>
            <li class="pull-right" style="margin-right: 30px;margin-top:6px;">
              <a class="link" href="/user/showactivitystream" data-toggle='tooltip' title='Activities' data-placement='bottom' style="position:relative">
                <span id="activityCount" class="badge badge-important hide" style="
                    position: absolute;
                    top: -10px;
                    right: -4px;
                    padding-left:5px;padding-right:5px;
                "></span>
                <i class="icon-bell-alt icon-2x"></i>
              </a>
            </li>
            <li class="pull-right dropdown" style="margin-right: 30px;margin-top:6px;">
              <div role="button" class="dropdown-toggle" data-hover="dropdown" data-toggle="dropdown">
                <a style="padding-left:10px;" class="link" href="#" data-toggle='tooltip' title='Explore' data-placement='left'>
                  <i class="icon-globe icon-2x"></i>
                </a>
              </div>
              <ul class="dropdown-menu" role="menu" style="left: -45px;top: 32px;min-width:130px;">
                <li role="presentation">
                  <a role="menuitem" tabindex="-1" href="/explore/popularusers">
                    <i class="icon-group"></i>&nbsp; Users
                  </a>
                </li>
                <li role="presentation">
                  <a role="menuitem" tabindex="-1" href="/explore/popularmovies">
                    <i class="icon-film"></i>&nbsp; Movies
                  </a>
                </li>
              </ul>
            </li>
            <li class="pull-right nav-link">
              <form action="/search/" method="post" style="position:relative">
                  <input name="query" type="text" class="input-large" placeholder="Search" style="padding-right: 25px;">
                  <i style="color: #e0e0e0;position: absolute;top: 5px;right: 5px;" class="icon-search icon-large"></i>
              </form>
            </li>
            <li class="pull-right" style="margin-right: 30px;margin-top:2px;" data-toggle='tooltip' title='Share Movie' data-placement='bottom'>
              <a class="link" href="#createMovieModal" id="createMovieBtn" data-toggle="modal">
                    <i class="icon-edit icon-3x"></i>
              </a>
            </li>
          </ul>
        <% } %>
      </div>
    </div>
    <div class="container main-container">
