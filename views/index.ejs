<!-- Include common header -->
<% include header %>
<!-- Content goes here -->

<div class="row content-area">
    <div class="span12">
    	<% if(movies.length == 0) { %>
        <div id="indexPageGuide" style="position:relative">
    		<img src="/images/guide/create-movie.png" style="position: absolute;top: -65px;z-index:999;left: 130px;">
    		<img src="/images/guide/search.png" style="position: absolute;top: -55px;z-index:999;left: 450px;">
    		<img src="/images/guide/explore.png" style="position: absolute;top: -55px;z-index:999;left: 660px;">
    		<div class="row">
    			<div class="span12">
    				<div style="font-size:19px;line-height:24px;margin-top:50px;color:#a0a0a0;">
	    				<span>Ohh !! There is so</span>
	    				<span>much of fun to unleash - yet this page</span>
	    				<span>is empty. Here are</span>
	    				<span>things you can start doing.</span>
		    		</div>
    			</div>
    		</div>
    		
			<ul class="thumbnails" style="margin-top:50px;text-align:center">
				<li class="span3">
					<div class="thumbnail" style="padding-top:20px;padding-bottom:20px;border: 5px dashed #d8807c;border-radius: 5px;box-sizing: border-box;">
						<i class="icon-edit icon-3x" style="color:#a0a0a0"></i>
    					<div>Share movie</div>
					</div>
    			</li>
    			<li class="span1"></li>
    			<li class="span3">
    				<div class="thumbnail" style="padding-top:20px;padding-bottom:20px;border: 5px dashed #d8807c;border-radius: 5px;box-sizing: border-box;">
    					<i class="icon-search icon-3x" style="color:#a0a0a0"></i>
    					<div>Search friends to follow</div>
    				</div>
    			</li>
    			<li class="span1"></li>
    			<li class="span3">
    				<div class="thumbnail" style="padding-top:20px;padding-bottom:20px;border: 5px dashed #d8807c;border-radius: 5px;box-sizing: border-box;">
    					<i class="icon-globe icon-3x" style="color:#a0a0a0"></i>
    					<div>Explore users to follow</div>
    				</div>
    			</li>
			</ul>
        </div>
    	<% } %>
      	<ul class="thumbnails movie-item-container" id="movieStream">
        	<% include movietemplate %>
      	</ul>
    </div>
</div>
<% include createmovie %>
<% include uiscripts %>
<script id="movieTemplate" src="/templates/handlebars.createmovie.js"></script>
<% if(movies.length == 0) { %>
    <script type="text/javascript">
        $("#createMovieFormBtn").on("click",function(){
            $("#indexPageGuide").remove();
        })
    </script>
<% } %>
<!-- Include common footer -->
<% include footer %>